<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/individual_review_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <ImageButton
            android:id="@+id/review_profile_pic"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/default_profile_pic" />

        <TextView
            android:id="@+id/review_username"
            style="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="6dp"
            android:layout_toRightOf="@id/review_profile_pic"
            android:text="Jane Doe" />

        <TextView
            android:id="@+id/review_rating"
            style="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/review_username"
            android:text="★★★★★" />

        <TextView
            android:id="@+id/review_body"
            style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/review_username"
            android:layout_toRightOf="@id/review_profile_pic"
            android:text="Alex was on time and had great lunchtime conversation" />


    </RelativeLayout>
</android.support.v7.widget.CardView>

