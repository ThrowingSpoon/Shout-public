<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2">


        <ImageView
            android:id="@+id/location_main_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="@drawable/coffee"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/location_main_picture"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="52dp"
            android:text="Nuovo Coffee"
            android:textColor="#FFF"
            android:textSize="30sp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/description"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="12dp"
            android:text="A Modern coffee shop with a couple of retro twists"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/distance"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="12dp"
            android:text="12m"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/rating"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="12dp"
            android:text="★★★★★(13)"
            android:textAlignment="center" />


        <RelativeLayout
            android:id="@+id/location_review_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="48dp">

            <ImageButton
                android:id="@+id/review_profile_pic"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/default_profile_pic" />

            <TextView
                android:id="@+id/review_username"
                style="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="6dp"
                android:layout_toRightOf="@id/review_profile_pic"
                android:text="Jane Doe" />

            <TextView
                android:id="@+id/review_rating"
                style="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/review_username"
                android:text="★★★★★" />

            <TextView
                android:id="@+id/review_body"
                style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/review_username"
                android:layout_toRightOf="@id/review_profile_pic"
                android:text="The baristas were very professional and made great coffee!" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/location_review_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="24dp">

            <ImageButton
                android:id="@+id/review_profile_pic_2"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/default_profile_pic" />

            <TextView
                android:id="@+id/review_username_2"
                style="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="6dp"
                android:layout_toRightOf="@id/review_profile_pic_2"
                android:text="Peter O'Reilly" />

            <TextView
                android:id="@+id/review_rating_2"
                style="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/review_username_2"
                android:text="★★★★★" />

            <TextView
                android:id="@+id/review_body_2"
                style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/review_username_2"
                android:layout_toRightOf="@id/review_profile_pic_2"
                android:text="Nice coffee shop, would recommend the chicken panini." />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>